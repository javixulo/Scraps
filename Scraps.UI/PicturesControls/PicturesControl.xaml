<UserControl x:Class="Scraps.UI.PicturesControls.PicturesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Scraps.UI.PicturesControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
			 Height="auto" Width="auto"
			 d:DataContext="{d:DesignInstance Type=local:PicturesControl}"
			 DataContext="{Binding RelativeSource={RelativeSource Self}}"
			 Loaded="OnLoaded">

	<UserControl.Resources>

		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="../Dictionary.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>

	</UserControl.Resources>

	<Grid>

		<DataGrid x:Name="picturesDataGrid" 
		          ItemsSource="{Binding Pictures}"
		          AutoGenerateColumns="False"
				  CanUserAddRows="False"
				  CanUserDeleteRows="False"
				  IsReadOnly="True"
				  SelectionChanged="OnSelectionChanged">

			<DataGrid.Columns>
				<DataGridTextColumn  Width="*" Header="Folder" Binding="{Binding Folder}"/>
				<DataGridTextColumn  Width="*" Header="File Name" Binding="{Binding FileName}"/>
			</DataGrid.Columns>
		</DataGrid>

	</Grid>
	
</UserControl>
